{
  "name": "better-install",
  "version": "0.0.2",
  "license": "MIT",
  "description": "Automatically install typescript types when installing or adding dependencies.",
  "main": "./src/index.ts",
  "scripts": {
    "clean": "shx rm -rf ./pkg/",
    "build": "pika-pack build",
    "start": "nodemon --watch src -e ts --exec pnpm build",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint:check": "eslint .",
    "lint": "eslint --fix .",
    "lint:staged": "lint-staged",
    "release:changeset": "changeset",
    "release:version": "changeset version",
    "release:npm": "npm-publish --token $NPM_TOKEN ./pkg/package.json",
    "env": "echo $npm_execpath"
  },
  "keywords": [
    "install",
    "types",
    "typings",
    "typescript"
  ],
  "author": "Derek Worthen <worthend.derek@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/dworthen/better-install.git"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-types"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-copy-assets",
        {
          "files": [
            "LICENSE"
          ]
        }
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "better-install"
        }
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "bi"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.11.2",
    "@jsdevtools/npm-publish": "^1.4.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-copy-assets": "^0.9.2",
    "@pika/plugin-simple-bin": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@types/ini": "^1.3.30",
    "@types/node": "^14.14.9",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "shx": "^0.3.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "argville": "^0.0.3",
    "cliui": "^7.0.4",
    "debug": "^4.3.1",
    "execa": "^4.1.0",
    "ini": "^1.3.5",
    "node-fetch": "^2.6.1",
    "resolve-pkg": "^2.0.0"
  }
}
